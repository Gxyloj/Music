page {
  color: #fff;
}


.bg-image, .bg-cover {
  position: fixed;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(40rpx);
}

.tab {
  display: flex;
  font-size: 26rpx;
  color: #999;
}

.tab view {
  margin-right: 10rpx;
}

.active {
  color: #fff;
}


/*主体部分*/

.music {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100vw;
  padding: 40rpx 20rpx 48rpx;
  box-sizing: border-box;
}

