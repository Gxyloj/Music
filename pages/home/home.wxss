/* pages/home/home.wxss */
page {
  padding: 0 20rpx;
  box-sizing: border-box;
}

.van-search {
  padding: 20rpx 0 !important;
}

.van-search__content {
  background-color: #fff !important;
}

.swiper {
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-item .swiper-image {
  width: 100%;
}

/*播放控制栏*/
.play-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 0 8px;

  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 44px;

  background-color: #fafafa;

  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}

.play-bar .left, .play-bar .right {
  display: flex;
  align-items: center;
}

.play-bar .left .album {
  position: relative;
  top: -12px;

  width: 56px;
  height: 56px;
  border-radius: 50%;
}

.play-bar .left .name {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.play-bar .right .icon {
  width: 30px;
  height: 30px;
}

.play-bar .right .play {
  width: 25px;
  height: 25px;
  margin-right: 10rpx;
}

@keyframes albumRotate {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}

.album-anim {
  animation: albumRotate 15s linear infinite;
}

.play-bar-placeholder {
  height: 48px;
}