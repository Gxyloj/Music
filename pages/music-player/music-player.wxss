.album {
  display: flex;
  justify-content: center;
}

.album .image {
  width: 88%;
}

.info {
  padding: 16rpx 0;
}

.info .title {
  font-size: 50rpx;
  margin-bottom: 30rpx;
}

.info .source {
  font-size: 28rpx;
}

.info .collection {
  margin-top: 30rpx;
}

.lyric {
  display: flex;
  flex: 0.35;
  justify-content: center;
  align-items: center;
}

.progress {
  position: relative;
  font-size: 26rpx;
}

.progress .current, .duration {
  position: absolute;
  bottom: -8px;
}

.progress .current {
  left: 16px;
}

.progress .duration {
  right: 18px;
}


.operation {
  display: flex;
  justify-content: space-around;
}


.btn {
  width: 88rpx;
  height: 88rpx;
}

